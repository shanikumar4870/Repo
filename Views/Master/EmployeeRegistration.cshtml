
@{
    ViewBag.Title = "EmployeeRegistration";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Script/Registration.js"></script>
<h2>EmployeeRegistration</h2>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label>Name </label>
                <input type="text" class="form-control" id="txtname" />
                <input type="hidden" class="form-control" id="hfild" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Mobile </label>
                <input type="number" class="form-control " id="txtmobile" maxlength="10" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label>Email </label>
                <input type="email"  class="form-control" id="txtemail" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>DOB </label>
                <input type="date" class="form-control" id="txtdob" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label>Password </label>
                <input type="password" class="form-control" id="txtpassword" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Designation </label>
                <select class="form-control" id="txtdesign">
                    <option value="0">--Select--</option>
                    <option>Software Developer </option>
                    <option>Hr </option>
                    <option>software Tester</option>
                    <option>Manager</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <button class="btn btn-primary" id="btn">Submit</button>
    </div>
</div>
<br />
<div id="Gridview"></div>